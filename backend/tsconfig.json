{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "allowJs": true,
        "checkJs": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
